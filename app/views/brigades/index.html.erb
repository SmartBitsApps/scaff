<p id="notice"><%= notice %></p>

<h1>Přehled všech brigád</h1>

<table>
  <thead>
    <tr>
      <th>Akce</th>
      <th>Pozice</th>
      <th>Počet</th>
      <th>Viditelné</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brigades.each do |brigade| %>
      <tr>
        <td><%= link_to brigade.event.title, event_path(brigade.event) %></td>
        <td><%= brigade.position.title %></td>
        <td><%= brigade.quantity %></td>
        <td><%= brigade.visible %></td>
        <td><%= link_to 'Detail', brigade %></td>
        <% if current_user.role == "admin" || current_user.role == "manager" %> | 
          <td><%= link_to 'Upravit', edit_brigade_path(brigade) %></td> | 
          <td><%= link_to 'Smazat', brigade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

