<%= simple_form_for(@brigade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :event, :value => :event_id, as: :hidden %>
    
    <%= f.association :position, label: 'Pozice', required: false %>
    <%= f.input :quantity, label: 'Počet míst', required: false %>
    <%= f.input :visible, label: 'Viditelné', required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Uložit', class: "btn btn-primary btn-lg btn-block" %>
  </div>
  <br>
<% end %>
