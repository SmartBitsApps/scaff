<%= simple_form_for(@brigade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :event, :value => :event_id, as: :hidden %>
    
    <%= f.association :position %>
    <%= f.input :quantity %>
    <%= f.input :visible %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
