<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @event.user.full_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @event.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p>
<% if @event.event_addresses.present? %>
  <p>
    <strong>Adresa:</strong>
    <% @event.event_addresses.each do |ea| %>
    <p><%= ea.street %></p>
    <p><%= ea.street_number %></p>
    <p><%= ea.city %></p>
    <% end %>
  </p>
<% else %>
  <p>Nemáte zadanou žádnou adresu.</p>
<% end %>


<p>
  <strong>Manager:</strong>
  <%= User.find_by_id(@event.manager.to_i).full_name %>
</p>

<p>
  <strong>Visible:</strong>
  <%= @event.visible %>
</p>

<% if @brigades.present? %>
  <p>
    <strong>Brigády:</strong>
    
    <table>
      <thead>
        <tr>
          <th>Event</th>
          <th>Position</th>
          <th>Quantity</th>
          <th>Available</th>
          <th>Visible</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @brigades.each do |brigade| %>
          <tr>
            <td><%= link_to brigade.event.title, event_path(brigade.event) %></td>
            <td><%= brigade.position.title %></td>
            <td><%= brigade.quantity %></td>
            <td><%= available_positions(brigade) %></td>
            <td><%= brigade.visible %></td>
            <td><%= link_to 'Show', brigade %></td>
            
            <td><%= link_to 'Subscribe', new_subscription_path(brigade) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    
  </p>
<% else %>
  <p>Nemáte zadanou žádnou brigádu.</p>
<% end %>
<%= link_to "Nová pozice", new_position_path %> | 
<%= link_to "Nová brigáda", new_brigade_path(@event) %> | 

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
