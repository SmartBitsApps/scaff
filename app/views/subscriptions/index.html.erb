<h1>Všechna přihlášení k akci</h1>

<table>
  <thead>
    <tr>
      <th>Brigáda</th>
      <th>Jméno</th>
      <th>Schváleno</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.brigade.event.title %></td>
        <td><%= subscription.user.full_name %></td>
        <td><%= subscription.approved %></td>
        
        <td> <%= link_to 'Detail', subscription %> |</td>
        <td> <%= link_to 'Upravit', edit_subscription_path(subscription) %> |</td>
        <td> <%= link_to 'Smazat', subscription, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

